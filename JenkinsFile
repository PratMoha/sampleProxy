pipeline {
  agent any
  stages {
    
    stage('Build APIProxy Bundle') {
    
      steps {
          // send build started notifications
       
       

      zip dir: 'apiproxy', glob: '', zipFile: 'nameOfFile'
      }
    }

    stage('Deploy APIProxy Bundle') {
    
      steps {
          // send build started notifications
       
        sh '''#!/bin/bash
chmod 777 deploy.sh
./deploy.sh'''
      }
    }

    
  }
 
}