pipeline {
  agent any
  stages {
    
    stage('Build APIProxy Bundle') {
    
      steps {
          // send build started notifications
       
       

      zip dir: 'apiproxy', glob: '', zipFile: 'CI_CD_PROXY.zip'
      }
    }

    stage('Deploy APIProxy Bundle') {
    
      steps {
          // send build started notifications
       
        bat 'sh ./deploy.sh'
      }
    }

    
  }
 
}